<%= form_for :answer, url: {action: "create"} do |f| %>
    <% if @answer && @answer.errors.any? %>
      <p>
        <ul>
          <% @answer.errors.full_messages.each do |msg|%>
            <li><%= msg %> </li>
          <% end %>
        </ul>
      </p>
    <% end %>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %><br>
    </p>
<% end %>
